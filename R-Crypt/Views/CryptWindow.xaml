<Window x:Class="R_Crypt.Views.CryptWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:R_Crypt.Views"
        xmlns:vm="clr-namespace:R_Crypt.ViewModels"
        xmlns:uc="clr-namespace:R_Crypt.UserControls.Views"
        mc:Ignorable="d"
        Title="CryptWindow" Height="600" Width="800">
    <Window.DataContext>
        <vm:CryptWindowVM/>
    </Window.DataContext>
    <Grid Background="{DynamicResource BackgroundWindowColor}">

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="100"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Grid Background="{DynamicResource BackgroundDarkColor}">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="250"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <uc:LogoPanel/>

                <Grid Grid.Column="1">
                    
                    <StackPanel Orientation="Vertical" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="20,20">
                        
                        <StackPanel Orientation="Horizontal">
                            
                            <TextBlock Text="Logged in as: " VerticalAlignment="Top" Margin="10,10" Foreground="White" FontSize="12"/>
                            
                            <Button VerticalAlignment="Top" Margin="0,0">
                                <Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                                    <StackPanel Orientation="Horizontal">
                                        <Image Source="/Resources/blank_user.png" Width="32" Height="32" RenderOptions.BitmapScalingMode="HighQuality" RenderOptions.EdgeMode="Aliased"/>
                                        <TextBlock Margin="10,0" VerticalAlignment="Center" Text="General User"/>
                                    </StackPanel>
                                </Grid>
                            </Button>
                            
                            <Separator Width="10" VerticalAlignment="Stretch" Opacity="0"/>
                            
                            <Button>
                                <Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                                    <StackPanel Orientation="Horizontal">
                                        <Image Source="/Resources/info.png" Width="32" Height="32" SnapsToDevicePixels="True" RenderOptions.BitmapScalingMode="HighQuality" RenderOptions.EdgeMode="Aliased"/>
                                        <TextBlock Margin="5,0,10,0" VerticalAlignment="Center" Text="Help"/>
                                    </StackPanel>
                                </Grid>
                            </Button>
                            
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" Margin="10,0">
                            <TextBlock Text="Program Version: " Foreground="White" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="0,10"/>
                            <TextBlock Text="0.12" Foreground="Red" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="10,10"/>
                        </StackPanel>
                       
                    </StackPanel>
                </Grid>
                
            </Grid>

            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="150"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Grid Background="{DynamicResource BackgroundDarkColor}">
                    <StackPanel Orientation="Vertical" Margin="0,30">

                        <Button Width="100" Height="70" Command="{Binding CMD_GoTo_Home}">
                            <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
                                <Image Height="32" Width="32" Source="/Resources/home.png" RenderOptions.BitmapScalingMode="HighQuality" RenderOptions.EdgeMode="Aliased"/>
                                <TextBlock Text="Home" Margin="0,5,0,0"/>
                            </StackPanel>
                        </Button>

                        <Separator Height="20" Opacity="0"/>

                        <Button Width="100" Height="70" Command="{Binding CMD_GoTo_Encrypt}">
                            <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
                                <Image Height="32" Width="32" Source="/Resources/padlock.png" RenderOptions.BitmapScalingMode="HighQuality" RenderOptions.EdgeMode="Aliased"/>
                                <TextBlock Text="Encrypt" Margin="0,5,0,0"/>
                            </StackPanel>
                        </Button>

                        <Separator Height="20" Opacity="0"/>

                        <Button Width="100" Height="70" Command="{Binding CMD_Goto_Decrypt}">
                            <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
                                <Image Height="32" Width="32" Source="/Resources/unlock.png" RenderOptions.BitmapScalingMode="HighQuality" RenderOptions.EdgeMode="Aliased"/>
                                <TextBlock Text="Decrypt" Margin="0,5,0,0"/>
                            </StackPanel>
                        </Button>

                        <Separator Height="20" Opacity="0"/>

                        <Button Width="100" Height="70" Command="{Binding CMD_GoTo_Options}">
                            <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
                                <Image Height="32" Width="32" Source="/Resources/gears.png" RenderOptions.BitmapScalingMode="HighQuality" RenderOptions.EdgeMode="Aliased"/>
                                <TextBlock Text="Options" Margin="0,5,0,0"/>
                            </StackPanel>
                        </Button>

                        <Separator Height="20" Opacity="0"/>

                    </StackPanel>
                    
                </Grid>

                <Grid Grid.Column="1">
                    <Grid x:Name="HomeGrid" Visibility="{Binding Vis_HomeGrid}">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="50"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <Grid Background="{DynamicResource BackgroundDarkColor}">
                            <Border Background="{DynamicResource BackgroundWindowColor}" CornerRadius="30,0,0,0"/>
                            <TextBlock Text="Home" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="White" FontSize="18"/>
                        </Grid>

                        <Border Margin="10,0,10,10" BorderBrush="AliceBlue" BorderThickness="1" CornerRadius="20" Grid.Row="1">
                            <Border Margin="5" BorderBrush="AliceBlue" BorderThickness="1" CornerRadius="15">
                                <Grid Margin="10">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="250"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="*"/>
                                        <RowDefinition Height="100"/>
                                    </Grid.RowDefinitions>

                                    <Grid Grid.RowSpan="2">
                                        <StackPanel>
                                            <TextBlock Text="Encryption stats" Foreground="Wheat" FontSize="13"/>
                                            
                                            <Separator Height="20" Opacity="0"/>

                                            <StackPanel Orientation="Horizontal">
                                                <TextBlock Text="Total files encrypted: " Foreground="White"/>
                                                <TextBlock Text="{Binding Str_FilesEncrypted}" Margin="5,0,0,0" Foreground="Lime"/>
                                            </StackPanel>

                                            <Separator Height="5" Opacity="0"/>

                                            <StackPanel Orientation="Horizontal">
                                                <TextBlock Text="Total bytes encrypted: " Foreground="White"/>
                                                <TextBlock Text="{Binding Str_TotalSizeEncrypted}" Foreground="Lime"/>
                                            </StackPanel>

                                            <Separator Height="5" Opacity="0"/>

                                            <StackPanel Orientation="Horizontal">
                                                <TextBlock Text="Biggest encrypted file size: " Foreground="White"/>
                                                <TextBlock Text="{Binding Str_BiggestSizeEncrypted}" Margin="5,0,0,0" Foreground="Lime"/>
                                            </StackPanel>

                                            <Separator Height="5" Opacity="0"/>

                                            <StackPanel Orientation="Horizontal">
                                                <TextBlock Text="Most encrypted file type: " Foreground="White"/>
                                                <TextBlock Text="{Binding Str_MostUsedType}" Foreground="Lime" Margin="5,0,0,0"/>
                                            </StackPanel>

                                            <Border BorderBrush="AliceBlue" HorizontalAlignment="Stretch" BorderThickness="1" Margin="10,15"/>

                                            <TextBlock Text="Decryption stats" Foreground="Wheat" FontSize="13"/>

                                            <Separator Height="20" Opacity="0"/>

                                            <StackPanel Orientation="Horizontal">
                                                <TextBlock Text="Total files decrypted: " Foreground="White"/>
                                                <TextBlock Text="{Binding Str_FilesDecrypted}" Foreground="Lime" Margin="5,0,0,0"/>
                                            </StackPanel>

                                            <Separator Height="5" Opacity="0"/>

                                            <StackPanel Orientation="Horizontal">
                                                <TextBlock Text="Total bytes decrypted" Foreground="White"/>
                                                <TextBlock Text="{Binding Str_TotalSizeDecrypted}" Foreground="Lime" Margin="5,0,0,0"/>
                                            </StackPanel>

                                            <Border BorderBrush="AliceBlue" HorizontalAlignment="Stretch" BorderThickness="1" Margin="10,15"/>

                                            <TextBlock Text="Program stats" Foreground="Wheat" FontSize="13"/>

                                            <Separator Height="5" Opacity="0"/>

                                            <StackPanel Orientation="Horizontal">
                                                <TextBlock Text="Last time opened: " Foreground="White"/>
                                                <TextBlock Text="{Binding Date_LastOpen}" Foreground="Lime" Margin="5,0,0,0"/>
                                            </StackPanel>

                                            <Separator Height="5" Opacity="0"/>

                                            <StackPanel Orientation="Horizontal">
                                                <TextBlock Text="Program version" Foreground="White"/>
                                                <TextBlock Text="{Binding ProgramVersion}" Foreground="Red" Margin="5,0,0,0"/>
                                            </StackPanel>
                                            
                                        </StackPanel>
                                    </Grid>
                                    
                                    <DockPanel Grid.Column="1">
                                        <TextBlock Text="Currently Encrypted Files" HorizontalAlignment="Center" Foreground="White" DockPanel.Dock="Top" FontSize="13"/>
                                        <Separator Height="10" Opacity="0" DockPanel.Dock="Top"/>
                                        <DataGrid AutoGenerateColumns="False" CanUserAddRows="False" CanUserResizeColumns="False" RowHeaderWidth="0" BorderBrush="Black"
                                                  ColumnHeaderStyle="{DynamicResource BaseHeaderStyle}" RowStyle="{DynamicResource BaseRowSyle}" Background="{DynamicResource BackgroundDarkColor}"
                                                  HorizontalScrollBarVisibility="Disabled" VerticalScrollBarVisibility="Hidden" GridLinesVisibility="None">
                                            <DataGrid.Columns>
                                                
                                                <DataGridTemplateColumn Header="File" HeaderStyle="{DynamicResource LeftHeaderStyle}" Width="*">
                                                    <DataGridTemplateColumn.CellTemplate>
                                                        <DataTemplate>
                                                            <DockPanel LastChildFill="True" Margin="10,0,0,0">
                                                                <Image Width="25" Height="25"/>
                                                                <TextBlock VerticalAlignment="Center"/>
                                                            </DockPanel>
                                                        </DataTemplate>
                                                    </DataGridTemplateColumn.CellTemplate>
                                                </DataGridTemplateColumn>

                                                <DataGridTemplateColumn Width="auto" MinWidth="80" Header="Type" HeaderStyle="{DynamicResource CenterHeaderStyle}">
                                                    <DataGridTemplateColumn.CellTemplate>
                                                        <DataTemplate>

                                                        </DataTemplate>
                                                    </DataGridTemplateColumn.CellTemplate>
                                                </DataGridTemplateColumn>

                                                <DataGridTemplateColumn Width="auto" Header="Size" MinWidth="80" HeaderStyle="{DynamicResource CenterHeaderStyle}">
                                                    <DataGridTemplateColumn.CellTemplate>
                                                        <DataTemplate>
                                                            <TextBlock VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                                        </DataTemplate>
                                                    </DataGridTemplateColumn.CellTemplate>
                                                </DataGridTemplateColumn>

                                                <DataGridTemplateColumn Width="auto" MinWidth="100" Header="Date" HeaderStyle="{DynamicResource RightHeaderStyle}">
                                                    <DataGridTemplateColumn.CellTemplate>
                                                        <DataTemplate>
                                                            <TextBlock Text="-------------" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                        </DataTemplate>
                                                    </DataGridTemplateColumn.CellTemplate>
                                                </DataGridTemplateColumn>
                                                
                                            </DataGrid.Columns>
                                            
                                        </DataGrid>
                                    </DockPanel>

                                    <Grid Grid.Column="1" Grid.Row="1">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="30"/>
                                            <RowDefinition Height="*"/>
                                        </Grid.RowDefinitions>

                                        <Button Width="80" Height="20" Content="Decrypt" HorizontalAlignment="Right" Margin="0,0,10,0"/>

                                        <Border HorizontalAlignment="Left" Margin="0,10" VerticalAlignment="Stretch" BorderBrush="AliceBlue" BorderThickness="1" Grid.RowSpan="2"/>

                                        <StackPanel Grid.RowSpan="2" Orientation="Vertical" HorizontalAlignment="Left" Margin="10,10">
                                            <TextBlock Text="Secure folders: " Foreground="Wheat" FontSize="13" HorizontalAlignment="Center"/>
                                            <Separator Height="10" Opacity="0"/>
                                            <Button>
                                                <StackPanel Orientation="Horizontal" Margin="5,2">
                                                    <Image Source="/Resources/secure_folder.png" Width="32" Height="32"/>
                                                    <TextBlock Text="Manage Folders" Margin="5,0,0,0" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                </StackPanel>
                                            </Button>
                                        </StackPanel>
                                        
                                    </Grid>
                                    
                                </Grid>
                            </Border>
                        </Border>
                    </Grid>
                </Grid>
            </Grid>
        </Grid>
    </Grid>
</Window>
